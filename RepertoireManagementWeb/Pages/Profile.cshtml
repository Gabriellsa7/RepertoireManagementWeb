@page
@model RepertoireManagementWeb.Pages.ProfileModel
@{
    ViewData["Title"] = "User Profile";
}

<link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />

<div class="container text-center mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-page="/Index" class="btn btn-main">Back</a>
        <form method="post" asp-page-handler="Logout">
            <button type="submit" class="btn btn-outline-danger">Logout</button>
        </form>
    </div>

    <div class="d-flex flex-column align-items-center mb-5">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="rounded-circle mb-3" width="120" height="120" alt="User Image" />
        }
        else if (!string.IsNullOrEmpty(Model.UserName))
        {
            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mb-3"
                 style="width: 120px; height: 120px; font-size: 48px;">
                @Model.UserName.Substring(0, 1).ToUpper()
            </div>
        }

        <h2>@Model.UserName</h2>
        <div class="mt-3">
            <a asp-page="/UserPages/Edit" asp-route-id="@Model.UserId" class="btn btn-main">
                Edit Profile
            </a>
        </div>
    </div>
    <div class="list-group text-start custom-menu">
        <a asp-page="/UserPages/Details" asp-route-id="@Model.UserId" class="list-group-item list-group-item-action">
            👤 My Infos
        </a>
        <a asp-page="/BandPages/Index" class="list-group-item list-group-item-action">
            🎵 My Bands
        </a>
        <a asp-page="/MusicPages/Index" class="list-group-item list-group-item-action">
            🎼 My Songs
        </a>
        <a asp-page="/RepertoirePages/Index" class="list-group-item list-group-item-action">
            📜 My Repertoires
        </a>
        <a asp-page="/SettingsPages/Index" class="list-group-item list-group-item-action">
            ⚙️ Settings
        </a>
        <a asp-page="/UserPages/Delete" asp-route-id="@Model.UserId" class="list-group-item list-group-item-action">
            ⚠️ Dellete Account
        </a>
    </div>
