@page
@model RepertoireManagementWeb.Pages.ProfileModel
@{
    ViewData["Title"] = "User Profile";
}

<link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />

<div class="container text-center mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-page="/Index" class="btn btn-outline-primary">Back</a>
        <form method="post" asp-page-handler="Logout">
            <button type="submit" class="btn btn-outline-danger">Logout</button>
        </form>
    </div>

    <div class="d-flex flex-column align-items-center mb-5">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="rounded-circle mb-3" width="120" height="120" alt="User Image" />
        }
        else if (!string.IsNullOrEmpty(Model.UserName))
        {
            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mb-3"
                 style="width: 120px; height: 120px; font-size: 48px;">
                @Model.UserName.Substring(0, 1).ToUpper()
            </div>
        }

        <h2>@Model.UserName</h2>
    </div>
    <div>
        <form method="post" enctype="multipart/form-data" asp-page-handler="UploadImage">
            <div class="form-group custom-upload justify-content-center">
                <label class="custom-upload-label" for="profileImage">Choose Archive</label>
                <input type="file" id="profileImage" name="profileImage" onchange="updateFileName(this)">
                <span class="file-name" id="fileName">No Archive</span>
            </div>
            <div class="text-center mt-3">
                <button type="submit" class="btn-main btn-success py-2 px-lg-5" style="border-radius: 60px; border: none;">Upload</button>
            </div>
        </form>
    </div>
</div>

<script>
    function updateFileName(input) {
        const fileName = input.files.length > 0 ? input.files[0].name : "No Archive";
        document.getElementById("fileName").textContent = fileName;
    }
</script>
