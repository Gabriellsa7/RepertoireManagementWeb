@page
@model RepertoireManagementWeb.Pages.UserPages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />

<h1>My Infos</h1>

<div>
    <hr />
    <dl class="col">
        <dd class="col-sm-10">
            <img src="@Model.User.ImageUrl" class="rounded-circle mb-3" width="120" height="120" alt="User Image" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-main" asp-page="./Edit" asp-route-id="@Model.User.Id">Edit</a>
</div>
