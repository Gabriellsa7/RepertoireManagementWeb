@page
@model RepertoireManagementWeb.Pages.LoginModel

@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/login.css" />

<div class="d-flex flex-column">
    <div class="d-flex justify-content-center my-5">
        <img class="img-fluid" src="~/img/logo.png" alt="Logo da empresa" />
    </div>
    <div>
        <h1>Login</h1>
        <form method="post">
            <div class="d-flex flex-column gap-lg-3">
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="LoginEmail" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input asp-for="LoginPassword" class="form-control" type="password" />
                </div>
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="text-danger">@Model.ErrorMessage</div>
                }
                <button type="submit" class="btn btn-primary mt-2">Login</button>
            </div>
        </form>
        <p class="mt-3">
            Don't have an account yet?
            <a asp-page="/UserPages/Create" class="secondary-text-color">Sign up</a>
        </p>
    </div>

</div>


@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger mt-2">@Model.ErrorMessage</div>
}
