@page
@model RepertoireManagementWeb.Pages.LoginModel

@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="~/css/login.css" />

<div class="d-flex flex-column">
    <div class="d-flex justify-content-center my-5">
        <img class="img-fluid" src="~/img/logo.png" alt="Logo da empresa" />
    </div>
    <div>
        <h1>Welcome Back!</h1>
        <form method="post">
            <div class="d-flex flex-column gap-lg-3">
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="LoginEmail" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input asp-for="LoginPassword" class="form-control" type="password" />
                </div>
                <component type="typeof(RepertoireManagementWeb.Components.LoginError)"
                           render-mode="ServerPrerendered"
                           param-Message="Model.ErrorMessage" />
                <button type="submit" class="btn btn-main mt-2">Login</button>
            </div>
        </form>
        <p class="mt-3">
            Don't have an account yet?
            <a asp-page="/UserPages/Create" class="secondary-text-color">Sign up</a>
        </p>
    </div>

</div>
