@page
@model RepertoireManagementWeb.Pages.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<div class="align-items-center">
    <form method="post">
        <div class="form-group">
            <label>Email</label>
            <input asp-for="LoginEmail" class="form-control" />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input asp-for="LoginPassword" class="form-control" type="password" />
        </div>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="text-danger">@Model.ErrorMessage</div>
        }
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</div>

<p class="mt-3">
    Ainda não tem conta? <a asp-page="/UserPages/Create">Cadastre-se</a>
</p>

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger mt-2">@Model.ErrorMessage</div>
}
