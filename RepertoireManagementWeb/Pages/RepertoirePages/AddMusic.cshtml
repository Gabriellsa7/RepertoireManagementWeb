@page
@model RepertoireManagementWeb.Pages.RepertoirePages.AddMusicModel
@{
    ViewData["Title"] = "Add Music to Repertoire";
}

<h1>Add Music to Repertoire: @Model.RepertoireName</h1>

<form method="post">
    <input type="hidden" asp-for="RepertoireId" />

    <div class="form-group">
        <label for="MusicId">Select Music</label>
        <select asp-for="MusicId" asp-items="Model.MusicOptions" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>