@page
@model RepertoireManagementWeb.Pages.RepertoirePages.DetailsModel

@{
    ViewData["Title"] = "Details";
    var userIdStr = HttpContext.Session.GetString("UserId");
    Guid.TryParse(userIdStr, out var loggedUserId);
    var leaderId = Model.Repertoire.Band?.LeaderId;
}

<link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />

<h1>Details</h1>
<hr />
<div>
    <h4>Repertoire</h4>
    <hr />
    <dl class="col">
        <dd class="col-sm-10">
            <img src="@Model.Repertoire.ImageUrl" alt="Repertoire Image" style="max-width: 200px; border-radius: 10px;" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Repertoire.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Repertoire.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Repertoire.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Repertoire.Description)
        </dd>
    </dl>
</div>
<div>
    @if (leaderId == loggedUserId)
    {
        <a class="btn btn-main" asp-page="./Edit" asp-route-id="@Model.Repertoire.Id">Edit</a>
    }
</div>
<hr />
<div>
    <a asp-page="Index" class="btn btn-main">Back</a>
</div>