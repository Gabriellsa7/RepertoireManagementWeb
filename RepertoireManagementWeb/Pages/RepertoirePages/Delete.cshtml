@page
@model RepertoireManagementWeb.Pages.RepertoirePages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<hr />
<h3>Are you sure you want to delete this?</h3>
<hr />
<div>
    <h4>Repertoire</h4>
    <hr />
    <dl class="col">
        <dd class="col-sm-10">
            <img src="@Model.Repertoire.ImageUrl" alt="Repertoire Image" style="max-width: 200px; border-radius: 10px;" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Repertoire.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Repertoire.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Repertoire.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Repertoire.Description)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Repertoire.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>

<hr />
<div>
    <a asp-page="Index" class="btn btn-main">Back</a>
</div>
