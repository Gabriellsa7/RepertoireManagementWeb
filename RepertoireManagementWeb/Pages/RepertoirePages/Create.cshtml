@page
@model RepertoireManagementWeb.Pages.RepertoirePages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />


<h1>Create</h1>
<hr />
<h4>Repertoire</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Repertoire.Name" class="control-label"></label>
                <input asp-for="Repertoire.Name" class="form-control" />
                <span asp-validation-for="Repertoire.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Repertoire.Description" class="control-label"></label>
                <input asp-for="Repertoire.Description" class="form-control" />
                <span asp-validation-for="Repertoire.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repertoire.ImageUrl" class="control-label"></label>
                <input asp-for="Repertoire.ImageUrl" class="form-control" />
                <span asp-validation-for="Repertoire.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Repertoire.BandId" class="control-label">Band</label>
                <select asp-for="Repertoire.BandId" class ="form-control" asp-items="ViewBag.BandId"></select>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-main" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-page="Index" class="btn btn-main">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
