@page
@model RepertoireManagementWeb.Pages.MusicPages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Music</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Music.Title" class="control-label"></label>
                <input asp-for="Music.Title" class="form-control" />
                <span asp-validation-for="Music.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Music.ImageUrl" class="control-label"></label>
                <input asp-for="Music.ImageUrl" class="form-control" />
                <span asp-validation-for="Music.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="PdfUpload">Upload da Letra (PDF)</label>
                <input type="file" id="PdfUpload" name="PdfUpload" class="form-control" accept=".pdf" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
