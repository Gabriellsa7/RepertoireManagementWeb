@page
@model RepertoireManagementWeb.Pages.MusicPages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />

<h1>Details</h1>

<div>
    <h4>Music</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Music.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Music.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Music.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Music.ImageUrl)
        </dd>
        <dt class="col-sm-2">
            Letra (PDF)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Music.PdfFile != null)
            {
                <p>
                    <a class="text-details" href="@Url.Page("PdfDownload", new { id = Model.Music.Id })" target="_blank">Baixar Letra em PDF</a>
                </p>
                <iframe src="@Url.Page("PdfDownload", new { id = Model.Music.Id })"
                        width="100%" height="600px" style="border:1px solid #ccc;"></iframe>
            }
            else
            {
                <span>Nenhum PDF disponível</span>
            }
        </dd>

    </dl>
</div>
<div>
    <a class="btn btn-main" asp-page="./Edit" asp-route-id="@Model.Music.Id">Edit</a>
</div>
<hr class="primary-text-color"/>
<a asp-page="Index" class="btn btn-main">Back</a>