@page
@model RepertoireManagementWeb.Pages.BandPages.RepertoirePage.AddRepertoireModel
@{
    ViewData["Title"] = "Adicionar Repertório Existente à Banda";
}

<h2>Adicionar Repertório Existente à Banda: @Model.Band.Name</h2>

<form method="post">
    <input type="hidden" asp-for="BandId" />

    <div class="form-group">
        <label asp-for="SelectedRepertoireId">Selecionar Repertório</label>
        <select asp-for="SelectedRepertoireId" asp-items="Model.AvailableRepertoires" class="form-control">
            <option value="">-- Selecione um Repertório Livre --</option>
        </select>
        <span asp-validation-for="SelectedRepertoireId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Adicionar à Banda</button>
    <a asp-page="/BandPages/Details" asp-route-id="@Model.BandId" class="btn btn-secondary">Cancelar</a>
</form>
