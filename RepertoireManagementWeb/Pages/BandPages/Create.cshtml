@page
@model RepertoireManagementWeb.Pages.BandPages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Band</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Band.Name" class="control-label"></label>
                <input asp-for="Band.Name" class="form-control" />
                <span asp-validation-for="Band.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Band.ImageUrl" class="control-label"></label>
                <input asp-for="Band.ImageUrl" class="form-control" />
                <span asp-validation-for="Band.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Band.LeaderId" class="control-label"></label>
                <select asp-for="Band.LeaderId" class ="form-control" asp-items="ViewBag.LeaderId"></select>
            </div>
            <div class="form-group pt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>  
        </form>
    </div>
</div>
<hr />
<div class="mt-2">
    <a asp-page="Index" class="btn btn-main">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


