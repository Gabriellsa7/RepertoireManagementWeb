@page
@model RepertoireManagementWeb.Pages.BandPages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Band</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Band.Id" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Band.Name" class="control-label"></label>
                <input asp-for="Band.Name" class="form-control" />
                <span asp-validation-for="Band.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Band.ImageUrl" class="control-label"></label>
                <input asp-for="Band.ImageUrl" class="form-control" />
                <span asp-validation-for="Band.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Leader</label>
                <input class="form-control" value="@Model.Band.Leader?.Email" disabled />
            </div>
            <div class="form-group pt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />
<div class="mt-2">
    <a asp-page="Index" class="btn btn-main">Back</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
