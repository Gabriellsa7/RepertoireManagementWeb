@page
@model RepertoireManagementWeb.Pages.BandPages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />

@{
    var userIdStr = HttpContext.Session.GetString("UserId");
    Guid.TryParse(userIdStr, out var loggedUserId);
}

<h1>Details</h1>

<div>
    <h4>Band</h4>
    <hr />
    <dl class="col">
        <dd class="col-sm-10">
            <img src="@Model.Band.ImageUrl" alt="Band Image" style="max-width: 200px; border-radius: 10px;" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Band.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Band.Name)
        </dd>
    </dl>
</div>
<div class="d-flex gap-2">
    @if (Model.Band.LeaderId == loggedUserId)
    {
        <div>
            <a class="btn btn-main" asp-page="/BandPages/MemberPage/AddMember" asp-route-bandId="@Model.Band.Id">
                Add Member
            </a> |
            <a class="btn btn-main" asp-page="./Edit" asp-route-id="@Model.Band.Id">Edit</a> |
        </div>
    }
    <a asp-page="Index" class="btn btn-main">Back</a>
</div>
