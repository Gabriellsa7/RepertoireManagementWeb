@page
@model RepertoireManagementWeb.Pages.BandPages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Band</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Band[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Band[0].ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Band[0].Leader)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Band) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Leader.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-page="./MemberPage/ListMembers" asp-route-bandId="@item.Id">Ver Membros</a> |
            </td>
        </tr>
}
    </tbody>
</table>
