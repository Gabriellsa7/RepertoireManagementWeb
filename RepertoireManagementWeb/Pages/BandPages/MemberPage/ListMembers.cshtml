@page
@model RepertoireManagementWeb.Pages.BandPages.MemberPage.ListMembersModel
@{
    ViewData["Title"] = "Bands Members";
}

<link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />

<h1>Bands Members: @Model.Band.Name</h1>

@if (Model.Members.Any())
{
    <table class="table">
        <thead>
            <tr class="primary-text-color">
                <th>Name</th>
                <th>Email</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Members)
            {
                <tr class="primary-text-color">
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>
                        @if (!string.IsNullOrEmpty(user.ImageUrl))
                        {
                            <img src="@user.ImageUrl" alt="Imagem" width="50" height="50" />
                        }
                        else
                        {
                            <span>No image</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>This Band Doesen't have a Member.</p>
}
<a asp-page="../Index" class="btn btn-main">Back</a>
