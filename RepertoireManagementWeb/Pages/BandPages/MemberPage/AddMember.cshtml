@page
@model RepertoireManagementWeb.Pages.Bands.Members.AddMemberModel
@{
    ViewData["Title"] = "Addd Band Member";
}

<h2>Add Band Member: @Model.Band.Name</h2>

<form method="post">
    <input type="hidden" asp-for="BandId" />

    <div class="form-group">
        <label asp-for="SelectedUserId">Select User</label>
        <select asp-for="SelectedUserId" class="form-control" asp-items="Model.AvailableUsers">
            <option value="">-- Select a User --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Add Member</button>
    <a asp-page="/Bands/Details" asp-route-id="@Model.BandId" class="btn btn-secondary">Cancel</a>
</form>
