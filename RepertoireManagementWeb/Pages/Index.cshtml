@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />

<div class="text-center ">
    @if (!User.Identity.IsAuthenticated)
    {
        <div>
            <div class="d-flex justify-content-center my-5">
                <img class="img-fluid" src="~/img/logo.png" alt="Logo da empresa" />
            </div>
            <div>
                <form method="get" asp-page="/Login" class="mt-3">
                    <button type="submit" class="btn btn-main btn-lg w-100">Access Your Account</button>
                </form>
                <form method="get" asp-page="/UserPages/Create" class="mt-3">
                    <button type="submit" class="btn btn-main btn-lg w-100">Create an Account</button>
                </form>
            </div>
        </div>
    }
    else
    {
        <p class="mt-3">
            Welcome, @User.Identity.Name!
            @* <a class="nav-link text-dark" asp-area="" asp-page="/Logout">Logout</a> *@
        </p>
    }
</div>
