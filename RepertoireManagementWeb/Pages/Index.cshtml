@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />

<style>
    /* Fade-in animation */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .fade-in {
        animation: fadeIn 0.6s ease-in-out;
    }

    /* Card overlay style */
    .card-overlay {
        position: relative;
        overflow: hidden;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        transition: transform 0.3s ease;
    }

    .card-overlay:hover {
        transform: translateY(-5px);
    }

    .card-overlay img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .card-overlay:hover img {
        transform: scale(1.05);
    }

    .overlay-content {
        position: absolute;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(0, 0, 0, 0.4);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .card-overlay:hover .overlay-content {
        opacity: 1;
    }

    .section-title {
        margin-top: 40px;
        margin-bottom: 20px;
        text-align: left;
        font-weight: bold;
        font-size: 1.5rem;
        border-bottom: 2px solid #444;
        padding-bottom: 5px;
    }

    .item-name {
        margin-top: 8px;
        text-align: center;
        font-weight: bold;
        font-size: 1rem;
    }
</style>

<div class="container fade-in">
    @if (!User.Identity.IsAuthenticated)
    {
        <div class="text-center">
            <div class="d-flex justify-content-center my-5">
                <img class="img-fluid" src="~/img/logo.png" alt="Company logo" />
            </div>
            <form method="get" asp-page="/Login" class="mt-3">
                <button type="submit" class="btn btn-main btn-lg w-100">Access Your Account</button>
            </form>
            <form method="get" asp-page="/UserPages/Create" class="mt-3">
                <button type="submit" class="btn btn-main btn-lg w-100">Create an Account</button>
            </form>
        </div>
    }
    else
    {
        <h4 class="mt-3">Welcome, @User.Identity.Name!</h4>

        <!-- Bands -->
        <div class="section-title">Bands</div>
        <div class="row">
            @if (Model.AllBands.Any())
            {
                foreach (var b in Model.AllBands)
                {
                    <div class="col-md-3 mb-4 fade-in">
                        <div class="card-overlay">
                            <img src="@(!string.IsNullOrEmpty(b.ImageUrl) ? b.ImageUrl : "/img/default-band.jpg")" alt="@b.Name">
                            <div class="overlay-content">
                                <a asp-page="/BandPages/Details" asp-route-id="@b.Id" class="btn btn-main">View</a>
                            </div>
                        </div>
                        <p class="item-name">@b.Name</p>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">No bands found.</p>
            }
        </div>

        <!-- Repertoires -->
        <div class="section-title">Repertoires</div>
        <div class="row">
            @if (Model.AllRepertoires.Any())
            {
                foreach (var r in Model.AllRepertoires)
                {
                    <div class="col-md-3 mb-4 fade-in">
                        <div class="card-overlay">
                            <img src="@(!string.IsNullOrEmpty(r.ImageUrl) ? r.ImageUrl : "/img/default-repertoire.jpg")" alt="@r.Name">
                            <div class="overlay-content">
                                <a asp-page="/RepertoirePages/Details" asp-route-id="@r.Id" class="btn btn-main">View</a>
                            </div>
                        </div>
                        <p class="item-name">@r.Name</p>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">No repertoires found.</p>
            }
        </div>

        <!-- Music -->
        <div class="section-title">Music</div>
        <div class="row">
            @if (Model.AllMusic.Any())
            {
                foreach (var m in Model.AllMusic)
                {
                    <div class="col-md-3 mb-4 fade-in">
                        <div class="card-overlay">
                            <img src="@(!string.IsNullOrEmpty(m.ImageUrl) ? m.ImageUrl : "/img/default-music.jpg")" alt="@m.Title">
                            <div class="overlay-content">
                                <a asp-page="/MusicPages/Details" asp-route-id="@m.Id" class="btn btn-main">View</a>
                            </div>
                        </div>
                        <p class="item-name">@m.Title</p>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">No music found.</p>
            }
        </div>
    }
</div>
